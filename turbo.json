{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
    },
    "lint": {},
    "lintfix": {},
    "deploy": {
      "dependsOn": ["build", "test", "lint"]
    },
    "@tradeb0t/core#dev": {
      "cache": false,
      "persistent": true
    },
    "stubb0t#dev": {
      "cache": false,
      "persistent": true
    },
    "@tradeb0t/dashboard#dev": {
      "cache": false,
      "persistent": true
    }
  }
}
